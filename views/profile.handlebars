<script src="js/profile.js"></script>

<div class="container">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" id="nbar">

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav m-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/home">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/profile">Profile</a>
                </li>
                {{!-- <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contact</a>
                </li> --}}
            </ul>
        </div>
    </nav>

    <div class="row">

        <div class="col-md-3">
            <img id="profilePhoto" src="http://lorempixel.com/output/abstract-q-c-350-250-1.jpg" alt="The is the alt text">

        </div>

        <div class="col-md-9">
            <div class="row">
                <button id="addFriendButton" type="button" class="btn btn-success">Add Friend</button>
            </div>

            <div class="row">
                <p id="bioText">{{bio}}</p>
            </div>

        </div>

    </div>

    <div id="activiFeed">
        <div class="list-group">
            {{#each efforts}}
            <a class="list-group-item list-group-item-action" id="listItem">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1" id="activiTitle">{{header}}</h5>
                    <small>{{updatedAt}}</small>
                </div>
                <p class="mb-1">{{description}}</p>
            </a>
            {{/each}}
        </div>


    </div>

</div>


